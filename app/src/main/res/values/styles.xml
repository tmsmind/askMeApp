<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MyToolbarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/Black</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="MyToolbarPopUp" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="actionMenuTextColor">@color/Black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="PlacePickerCard">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/background_material_light</item>
    </style>

    <style name="PlacePickerCardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

</resources>
